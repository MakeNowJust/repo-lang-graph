@import 'nib'

global-reset()
reset-html5()

*
  box-sizing border-box

header
  position absolute
  left 0
  top 0
  z-index 1
  width 100%
  height 6em
  padding-left 1em
  padding-top 1em

  border-bottom 1px solid #d8d8d8

  h1
    display inline-block
    font-size 3em
    padding-right (1/3)em
  .description
    padding-top 0.2em

main
  position absolute
  left 0
  top 0
  padding-top 7em
  width 100%
  height 100%

  .graph-data
    text-align center

    &__input
      width 30em
      font-size 1.3em
      border solid gray 1px
      border-radius 2px
      padding-left 1em
      padding-right 1em
      padding-top 0.3em
      padding-bottom 0.3em
      margin-right 0.5em

      &:focus
        border solid black 1px

    &__button
      margin-top 0.3em
      font-size 1.5em
      border solid gray 1px
      border-radius 2px

  .graph
    padding-top 3em
    width 100%
    &__canvas
      display block
      margin 0 auto
      width 400
      height 400
